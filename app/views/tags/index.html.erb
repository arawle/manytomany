<%= render partial: '/header' %>

<h1>All tags</h1>

<%= link_to "Add a new tag!!", new_tag_path %>

<% @tag.each do |tag| %>
  <h3><%= tag.name %></h3>
  <%= link_to "Edit tag", edit_tag_path(tag.id) %>
  |
  <%= link_to "Delete #{tag.name}", tag_path(tag), method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>

<%= render partial: '/footer' %>