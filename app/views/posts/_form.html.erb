<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |error| %>
    <p class= "text-danger">
      <%= error %>
    </p>
  <% end %>
<% end %>

<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <div>
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>
  <div class="form-group">
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |b| %>
        <%= b.label %>
        <%= b.check_box %>
    <% end %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>